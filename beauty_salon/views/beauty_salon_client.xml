<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <!-- Client Form View -->
  <record id="view_form_beauty_client" model="ir.ui.view">
    <field name="name">beauty.client.form</field>
    <field name="model">beauty.client</field>
    <field name="arch" type="xml">
      <form string="Client">
        <sheet>
          <group>
            <group>
            <field name="partner_id"/>
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="date_of_birth"/>
            <field name="discount"/>
            </group>
            <group>
              <field name="image_512" widget='image' class="oe_avatar m-0"
                     options='{"zoom": true, "preview_image":"avatar_256"}'/>
            </group>
          </group>
          <notebook>
                <page string="Appointment History">
                    <field name="appointment_history_ids">
                        <tree>
                          <field name="service_ids" widget="many2many_tags"/>
                          <field name="state" readonly="1"/>
                          <field name="master_id"/>
                          <field name="appointment_date"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids"/>
          <field name="message_ids" widget="mail_thread"/>
          <field name="activity_ids" widget="mail_activity"/>
        </div>
      </form>
    </field>
  </record>

  <!-- Client Tree View -->
  <record id="view_tree_beauty_client" model="ir.ui.view">
    <field name="name">beauty.client.tree</field>
    <field name="model">beauty.client</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="discount"/>
         <field name="visit_count"/>
      </tree>
    </field>
  </record>

  <!-- Client Kanban View -->
  <record id="view_kanban_beauty_client" model="ir.ui.view">
    <field name="name">beauty.client.kanban</field>
    <field name="model">beauty.client</field>
    <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="kanban-menu">
            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
<!--                       <ul class="oe_kanban_colorpicker" data-field="name"/>-->
          </t>
          <t t-name="kanban-box">
            <div class="oe_kanban_content d-flex justify-content-between">
              <div class="oe_kanban_details flex-grow-1">
                <strong>Name:</strong>
                <div><field name="name"/></div>
                <strong>Phone:</strong>
                <div><field name="phone"/></div>
                <strong>Email:</strong>
                <div><field name="email"/></div>
                <button name="action_create_appointment" string="Create Appointment" type="object" class="oe_highlight"/>

              </div>
              <div class="o_kanban_image_right">
                <img t-att-src="kanban_image('beauty.master', 'image_128', record.id.raw_value)"
                     class="o_kanban_image o_image_64_cover" alt="Master Image"/>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Client Search View -->
  <record id="view_search_beauty_client" model="ir.ui.view">
    <field name="name">beauty.client.search</field>
    <field name="model">beauty.client</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="email"/>
        <field name="phone"/>
      </search>
    </field>
  </record>

    <record id="action_beauty_salon_client_window" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">beauty.client</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="action_beauty_salon_client_menu"
              action="action_beauty_salon_client_window"
              parent="menu_beauty_salon_clients"
              name="Clients" sequence="200"/>

</odoo>
