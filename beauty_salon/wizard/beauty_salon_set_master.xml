<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <record id="view_change_master_wizard_form" model="ir.ui.view">
    <field name="name">change.master.wizard.form</field>
    <field name="model">change.master.wizard</field>
    <field name="arch" type="xml">
      <form string="Change Master">
        <group>
          <field name="appointment_ids" widget="many2many_tags"/>
          <field name="new_master_id"/>
        </group>
        <footer>
          <button string="Apply" type="object" name="apply_change" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

        <record id="action_change_master_wizard2" model="ir.actions.server">
        <field name="name">Change Master</field>
        <field name="model_id" ref="model_beauty_appointment"/>
        <field name="binding_model_id" ref="model_beauty_appointment"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'name': 'Change Master',
        'res_model': 'change.master.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {'default_appointment_id': records[0].id}
    }
        </field>
    </record>
</odoo>
