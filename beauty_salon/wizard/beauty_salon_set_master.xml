<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Форма візарда -->
    <record id="beauty_salon_set_master_wizard_form" model="ir.ui.view">
        <field name="name">set.master.wizard.form</field>
        <field name="model">set.master.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Master">
                <sheet>
                    <group>
                        <field name="client_ids" readonly="1"/>
                    </group>
                    <group>
                        <field name="master_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Assign Master" type="object" name="action_set_master" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Серверна дія -->
    <record id="action_assign_master_server" model="ir.actions.server">
        <field name="name">Assign Master</field>
        <field name="model_id" ref="model_beauty_client"/>
        <field name="binding_model_id" ref="model_beauty_client"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'name': 'Assign Master',
        'res_model': 'set.master.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {'active_ids': records.ids}
    }
        </field>
    </record>
</odoo>