<odoo>
  <record id="view_change_master_wizard_form" model="ir.ui.view">
    <field name="name">change.master.wizard.form</field>
    <field name="model">change.master.wizard</field>
    <field name="arch" type="xml">
      <form string="Change Master">
        <group>
          <field name="appointment_ids" widget="many2many_tags"/>
          <field name="new_master_id"/>
        </group>
        <footer>
          <button string="Apply" type="object" name="apply_change" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

